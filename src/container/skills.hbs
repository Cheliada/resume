{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <div class="card">
        <div class="col-12">
            {{#with main}}
            <main>
                <div class="card">
                    <div class="g-4">
                        <section>
                            {{> title data="All skills"}}
                            <ul>
                                <div class="card">
                                    {{#each skills}}
                                    <li>
                                        {{name}}

                                        {{#if point includeZero=true}} ({{point}}) {{/if}}
                                        {{#if isTop}} (TOP) {{/if}}

                                        {{#unless point includeZero=true}} (ще вивчаємо) {{/unless}}

                                        {{#unless point}}
                                        {{#if point includeZero=true}}
                                        (зараз вивчаємо)
                                        {{/if}}
                                        {{/unless}}
                                    </li>
                                    {{/each}}
                                </div>
                            </ul>
                        </section>
                    </div>
                </div>
                <div class="card g-3">
                    <section>
                        {{> title data="My hobbies" big=true}}
                        <ul>
                            <div class="card">
                                {{#each hobbies}}
                                <li>
                                    {{name}}

                                    {{#unless isMain}} (favourite) {{/unless}}
                                </li>
                                {{/each}}
                            </div>
                        </ul>
                    </section>
                </div>
            </main>
            {{/with}}
        </div>
    </div>
</div>

