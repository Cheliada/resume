{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            <div>
                <section>
                    {{> title data="Work history" big=true}}
                    <div>
                        <ul>
                            {{#each works}}
                            <li>
                                <div>{{position}}</div>
                                <br>
                                <div>{{duration.from}} -
                                    {{#if duration.to}}
                                    {{duration.to}}
                                    {{else}}
                                    (досі працюємо)
                                    {{/if}}
                                </div>
                                <br>
                                <br>
                                <div>{{> link text=company.name href=company.url blank=true noLine=true}}</div>
                                <br>
                                <div>
                                    <strong>Projects ({{projectAmout}})</strong>
                                </div>

                                <br>

                                <ul>
                                    {{#each projects}}
                                    <li>

                                        <div><b>{{company.name}}</b></div>

                                        <br>

                                        <div>
                                            <p>{{about}}</p>
                                        </div>

                                        <br>

                                        <div>
                                            <em>Project stacks ({{stackAmount}})</em>
                                        </div>
                                        <br>

                                        <div>
                                            <ul>
                                                {{#each stacks}}
                                                <li>
                                                    {{name}}
                                                </li>
                                                {{/each}}
                                            </ul>
                                        </div>
                                        <br>

                                        <div>
                                            <em>Project awards ({{awardAmount}})</em>
                                        </div>
                                        <br>
                                        <div>
                                            <ul>
                                                {{#each awards}}
                                                <li>
                                                    {{name}}
                                                </li>
                                                {{/each}}
                                            </ul>
                                        </div>
                                    </li>
                                    {{/each}}
                                </ul>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </section>
            </div>
        </section>
    </main>
    {{/with}}

</div>

