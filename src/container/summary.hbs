{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <div class="card">
        {{#with main}}
        <main>
            <section>
                <div>
                    <div class="card">
                        <section>
                            {{> title data=summary.title big=true}}
                            <div>
                                <p>{{summary.text}}</p>
                            </div>
                        </section>
                    </div>
                    <br>
                    <div class="card">
                        <section>
                            {{#with experience big=true}}
                            <div>
                                <h2>{{title}}</h2>
                                <p>{{text}}</p>
                            </div>
                            {{/with}}
                        </section>
                    </div>
                </div>
            </section>
        </main>
        {{/with}}
    </div>

</div>

